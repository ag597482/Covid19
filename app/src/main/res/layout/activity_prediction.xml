<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:background="@color/colorPrimary"
    tools:context=".PredictionActivity">
<LinearLayout

android:layout_width="match_parent"
android:layout_height="match_parent"
    android:orientation="vertical"
>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/place"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:textAllCaps="true"
        />

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="5dp"
        android:background="@drawable/rounded_textview"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_gravity="center"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:layout_gravity="center"
            android:text="Total Cases"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:layout_gravity="center"
            android:text="------"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/arrow_up_float" />
            <TextView
                android:id="@+id/dtotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="-------"
                android:textColor="#FAF6F6"


                />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">


        <LinearLayout
            android:id="@+id/constraintLayout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="65dp"
            android:background="@drawable/rectangular"
            android:orientation="vertical"
            android:layout_gravity="center"

            android:layout_margin="1dp"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/recover_cases_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active Cases"

                android:textColor="#FFFFFF"
                android:textStyle="bold|italic"
                android:layout_gravity="center"
                android:gravity="center"

                />
            <TextView
                android:id="@+id/active"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:gravity="center"
                android:text="-------"
                android:textColor="@color/yello"
                android:textStyle="bold"
                android:textSize="18sp"

                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/arrow"
                    app:srcCompat="@android:drawable/arrow_up_float" />
                <TextView
                    android:id="@+id/dactive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="-------"
                    android:textColor="#FAF6F6"


                    />
            </LinearLayout>






        </LinearLayout>

        <LinearLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="65dp"
            android:background="@drawable/rectangular"
            android:orientation="vertical"
            android:layout_gravity="center"

            android:layout_margin="1dp"
            android:gravity="center">

            <TextView
                android:id="@+id/death_cases_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recovered Cases"
                android:textColor="#FFFFFF"
                android:textStyle="bold|italic"
                android:layout_gravity="center"
                android:gravity="center"

                />

            <TextView
                android:id="@+id/recovered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
android:textSize="18sp"
                android:gravity="center"
                android:text="------"
                android:textStyle="bold"
                android:textColor="@color/green"

                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/arrow_up_float" />
                <TextView
                    android:id="@+id/drecovered"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="-------"
                    android:textColor="#FAF6F6"


                    />
            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="1dp"
            android:background="@drawable/rectangular"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/Active_cases_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deaths Cases"
                android:textColor="#FFFFFF"
                android:textStyle="bold|italic"
                android:layout_gravity="center"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/deaths"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="----"
                android:textSize="18sp"
                android:textColor="@color/red"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/arrow_up_float" />
                <TextView
                    android:id="@+id/ddeaths"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="-------"
                    android:textColor="#FAF6F6"


                    />
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recovery rate : 0.1%"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:id="@+id/rra"
        android:textSize="20sp"
        android:layout_margin="3dp"
        android:padding="5dp"
        android:layout_gravity="center"
        android:textAlignment="center"

        android:background="@drawable/sp_list_item"
        android:textAppearance="@style/TextAppearance.AppCompat"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mortality rate : 0.1%"
        android:layout_margin="3dp"
        android:padding="5dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:background="@drawable/sp_list_item"

        android:layout_gravity="center"
        android:textAlignment="center"
        android:id="@+id/dra"
        android:textSize="20sp"
        android:textAppearance="@style/TextAppearance.AppCompat"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="State name"
        android:id="@+id/sname"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hospital_value"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bed_value"/>
    <ListView
        android:id="@+id/list_pre"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp">

    </ListView>





</LinearLayout>
</ScrollView>
