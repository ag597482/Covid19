<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity"

    android:layout_gravity="center"
    android:gravity="center"
    android:background="#F4F3EF"
android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="5dp"
            android:background="@drawable/incr"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:contextClickable="true"
            android:spinnerMode="dialog"

            />

<LinearLayout
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_margin="5dp"
    android:background="@drawable/rounded_textview"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_gravity="center"

    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:layout_gravity="center"
        android:text="Total Cases"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:layout_gravity="center"
        android:text="------"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        />

</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">


        <LinearLayout
            android:id="@+id/constraintLayout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="65dp"
            android:background="#D7932E"
            android:orientation="vertical"
            android:layout_gravity="center"

            android:layout_margin="1dp"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/recover_cases_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active Cases"

                android:textColor="#FFFFFF"
                android:textStyle="bold|italic"
                android:layout_gravity="center"
                android:gravity="center"

                />
            <TextView
                android:id="@+id/active"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="19sp"
                android:gravity="center"
                android:text="-------"
                android:textColor="#FAF6F6"
                android:textStyle="bold"

                />






        </LinearLayout>

        <LinearLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="65dp"
            android:background="#6BD54E"
            android:orientation="vertical"
            android:layout_gravity="center"

            android:layout_margin="1dp"
            android:gravity="center">

            <TextView
                android:id="@+id/death_cases_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recovered Cases"
                android:textColor="#FFFFFF"
                android:textStyle="bold|italic"
                android:layout_gravity="center"
                android:gravity="center"

                />

            <TextView
                android:id="@+id/recovered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:gravity="center"
                android:text="------"
                android:textStyle="bold"
                android:textColor="#FAF6F6"
                android:textSize="19sp"
               />




        </LinearLayout>

        <LinearLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="1dp"
            android:background="#C62D2D"
            android:orientation="vertical"
          >

            <TextView
                android:id="@+id/Active_cases_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Death Cases"
                android:textColor="#FFFFFF"
                android:textStyle="bold|italic"
                android:layout_gravity="center"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/deaths"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="----"
                android:textColor="#ffffff"
                android:textSize="19sp"
                android:textStyle="bold"
              />




        </LinearLayout>
    </LinearLayout>

    </LinearLayout>

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     >

<androidx.appcompat.widget.SearchView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/serch"

    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:title="searchbar"
    android:textSize="25sp"
    android:icon="@android:drawable/ic_menu_search"
    app:showAsAction="ifRoom|collapseActionView"
    app:actionViewClass="androidx.appcompat.widget.SearchView"
    android:background="@drawable/et_style"
    android:clickable="true"
    app:queryHint="Search ..."

    />
     <ProgressBar
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/progressBar"
         android:layout_gravity="center"
         android:layout_margin="20dp"
         />
<ListView
    android:id="@+id/list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    />

 </LinearLayout>



</LinearLayout>