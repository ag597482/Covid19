<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity"

    android:layout_gravity="center_horizontal"

    android:background="@color/colorPrimary"
android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dropDownWidth="280dp"
            android:popupBackground="@drawable/rectangular"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            />

<LinearLayout
    android:layout_width="130dp"
    android:layout_height="130dp"
    android:layout_margin="5dp"
    android:background="@drawable/rounded_textview"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_gravity="center"

    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:layout_gravity="center"
        android:text="Total Cases"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:layout_gravity="center"
        android:text="------"
        android:textColor="@android:color/white"
        android:textSize="26sp"
        />

</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <LinearLayout
            android:id="@+id/constraintLayout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="65dp"
            android:background="@drawable/yellowrec"
            android:orientation="vertical"
            android:layout_gravity="center"


            android:layout_margin="1dp"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/recover_cases_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active Cases"

                android:textColor="#FFFFFF"
                android:textStyle="bold|italic"
                android:layout_gravity="center"
                android:gravity="center"

                />
            <TextView
                android:id="@+id/active"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="19sp"
                android:gravity="center"
                android:text="-------"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"

                />






        </LinearLayout>

        <LinearLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="65dp"
            android:background="@drawable/greenrec"
            android:orientation="vertical"
            android:layout_gravity="center"

            android:layout_margin="1dp"
            android:gravity="center">

            <TextView
                android:id="@+id/death_cases_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recovered Cases"
                android:textColor="#FFFFFF"
                android:textStyle="bold|italic"
                android:layout_gravity="center"
                android:gravity="center"

                />

            <TextView
                android:id="@+id/recovered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:gravity="center"
                android:text="------"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="19sp"
               />




        </LinearLayout>

        <LinearLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="1dp"
            android:background="@drawable/redrec"
            android:orientation="vertical"
          >

            <TextView
                android:id="@+id/Active_cases_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Death Cases"
                android:textColor="#FFFFFF"
                android:textStyle="bold|italic"
                android:layout_gravity="center"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/deaths"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="----"
                android:textColor="@color/colorPrimary"
                android:textSize="19sp"
                android:textStyle="bold"
              />




        </LinearLayout>
    </LinearLayout>

    </LinearLayout>

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     >

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"

         android:orientation="horizontal"

         android:layout_margin="2dp">


         <androidx.appcompat.widget.SearchView
             android:id="@+id/serch"
             android:layout_width="match_parent"

             android:layout_height="35dp"
             android:layout_marginLeft="8dp"

             android:layout_marginRight="8dp"
             android:layout_weight="1"
             android:background="@drawable/et_style"
             android:clickable="true"
             android:icon="@android:drawable/ic_menu_search"
             android:title="searchbar"
             app:actionViewClass="androidx.appcompat.widget.SearchView"
             app:queryHint="Search ..."
             app:showAsAction="ifRoom|collapseActionView"

             />

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="match_parent"

             android:background="@drawable/transparent_rectengle"
             android:clickable="true">

             <ImageView
                 android:id="@+id/sort_list"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:background="@mipmap/round_sort_black_36"
                 android:clickable="true"
                 android:gravity="center"
                 android:tint="@color/colorPrimaryDark" />
         </LinearLayout>

     </LinearLayout>
     <ProgressBar
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/progressBar"
         android:layout_gravity="center"
         android:layout_margin="20dp"
         />
<ListView
    android:id="@+id/list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/transparent_rectengle"
    />

 </LinearLayout>



</LinearLayout>